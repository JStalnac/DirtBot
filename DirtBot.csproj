<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net" Version="2.2.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="3.1.6">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.6" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3-beta1" />
    <PackageReference Include="Pastel" Version="1.3.2" />
    <PackageReference Include="Pomelo.EntityFrameworkCore.MySql" Version="3.1.2" />
    <PackageReference Include="SmartFormat.NET" Version="2.4.2" />
    <PackageReference Include="StackExchange.Redis" Version="2.1.30" />
    <PackageReference Include="YamlDotNet" Version="8.1.2" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="lang/**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="lang\en\commands\language.yml" />
    <None Remove="lang\en\commands\purge.yml" />
    <None Remove="lang\en\errors\bot.yml" />
    <None Remove="lang\en\errors\user.yml" />
    <None Remove="lang\fi\commands\language.yml" />
    <None Remove="lang\fi\commands\prefix.yml" />
    <None Remove="lang\fi\commands\purge.yml" />
    <None Remove="lang\fi\errors.yml" />
    <None Remove="lang\fi\errors\bot.yml" />
    <None Remove="lang\fi\errors\user.yml" />
    <None Remove="lang\fi\general.yml" />
    <None Remove="lang\en\commands\prefix.yml" />
    <None Remove="lang\en\errors.yml" />
  </ItemGroup>
  
</Project>
